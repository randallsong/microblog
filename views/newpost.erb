<body id="community-body">
		<div id="community-background"></div>
		<div id="profile-avatar">
				<img src="<%= @profiles.avatar %>" width="100%" height= "100%">
			</div>
		<div id="profile-user">
			<p><%= @user.fname %></p>
		</div>

		<form class="new_post" method="POST" action="/newpost">
		  <label for="text">Create your post here</label>
		  <textarea name="comment_text"></textarea><br>
		  <input type="submit">
		</form>


		<div id="log_out_button">
			<button>Log Out</button>
		</div>
		<div id="edit-button">
			<button>Edit Profile</button>
		</div>
		<div id="delete-button">
			<button>Delete Profile</button>
		</div>

		<br>
		<br>
		<br>
		<br>
		
		<script type="text/javascript" src="../public/script.js"></script>
	</body>