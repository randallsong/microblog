	<body id="community-body">
		<div id="community-background"></div>
		<div id="profile-avatar">
				<img src="<%= @profiles.avatar %>" width="100%" height= "100%">
			</div>
		<div id="profile-user">
			<p><%= @user.fname %></p>
		</div>

		<form class="postcomment" method="POST" action="/community">
		  <label for="text">Post a comment here</label>
		  <textarea name="comment_text"></textarea>
		  <input type="submit">
		</form>


		<div id="log_out_button">
			<button>Log Out</button>
		</div>
		<div id="edit-button">
			<button>Edit Profile</button>
		</div>
		<div id="delete-button">
			<button>Delete Profile</button>
		</div>

		<br>
		<br>
		<br>
		<br>
		<div id="test">
			<% @posts.each do |post| %>
  			<p class="comment"><%= post.comment %></p>
			<% end %>
		</div>
		<script type="text/javascript" src="../public/script.js"></script>
	</body>